sum_one_to_x: function integer (x: integer) = {

	if (x < 1) {
		return 0;
	}

	sum: integer = 0;
	i: integer;
	for(i = 1; i <= x; i++) {
		sum = sum + i;
	}

	return sum;

}

main: function integer () = {

	print sum_one_to_x(3), "\n";
	print sum_one_to_x(4), "\n";
	print sum_one_to_x(5), "\n";
	return 0;

}
